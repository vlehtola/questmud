-dim red, red, bright red             = healing
-dim pink, pink, bright pink          = mana

-violet                               = stun res

-dim blue, blue, bright blue          = stat str
-dim brown, brown, bright brown       = stat con
-dim yellow, yellow, bright yellow    = stat dex

-dim orange, orange, bright orange    = stat int
-dim white, white, bright white       = stat wis

-grey, black                          = poison
-green                                = antidote
